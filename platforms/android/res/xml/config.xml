<?xml version='1.0' encoding='utf-8'?>
<widget id="net.etxea.callejeroresponsable" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="FacebookConnectPlugin">
        <param name="android-package" value="org.apache.cordova.facebook.ConnectPlugin" />
    </feature>
    <access origin="https://m.facebook.com" />
    <access origin="https://graph.facebook.com" />
    <access origin="https://api.facebook.com" />
    <access origin="https://*.fbcdn.net" />
    <access origin="https://*.akamaihd.net" />
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <splash density="land-hdpi" src="res/screen.png" />
    <splash density="land-ldpi" src="res/screen.png" />
    <splash density="land-mdpi" src="res/screen.png" />
    <splash density="land-xhdpi" src="res/screen.png" />
    <splash density="port-hdpi" src="res/screen-port.png" />
    <splash density="port-ldpi" src="res/screen-port.png" />
    <splash density="port-mdpi" src="res/screen-port.png" />
    <splash density="port-xhdpi" src="res/screen-port.png" />
    <name>Callejero Responsable Gasteiz</name>
    <description>
        Aplicaci√≥n con callejero para conocer los comercios que promueven el consumo responsable en Vitoria/Gasteiz, Alava.
    </description>
    <author email="info@etxea.net" href="http://www.etxea.net">
        Etxea Soluciones TIC
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="SplashScreen" value="screen" />
    <icon src="res/icon.png" />
</widget>
